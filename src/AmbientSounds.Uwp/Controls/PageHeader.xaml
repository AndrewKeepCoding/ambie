<UserControl
    x:Class="AmbientSounds.Controls.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <FontIcon
                FontFamily="{StaticResource FluentUIGlyphs}"
                FontSize="{StaticResource SubtitleFontSize}"
                Foreground="{ThemeResource AccentTextFillColorTertiaryBrush}"
                Glyph="{x:Bind GlyphCode, Mode=OneWay}" />
            <TextBlock
                Margin="12,0,0,0"
                AutomationProperties.HeadingLevel="Level1"
                FontSize="{StaticResource SubtitleFontSize}"
                FontWeight="SemiBold"
                Text="{x:Bind HeaderText, Mode=OneWay}" />
        </StackPanel>

        <winui:InfoBar
            Margin="0,8,0,0"
            Closed="InfoBar_Closed"
            IsOpen="True"
            Message="{x:Bind InfoText, Mode=OneWay}"
            Severity="Informational"
            Visibility="{x:Bind InfoTextVisible, Mode=OneWay}" />
    </StackPanel>
</UserControl>
